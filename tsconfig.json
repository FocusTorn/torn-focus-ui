{
	"compilerOptions": {
		"module": "Node16",
		"sourceMap": true,
        "strict": true,
        
        "target": "ES2022",
        "lib": ["ES2022"],
        "skipLibCheck": true,

		"outDir": "out/src",
        "rootDir": "src",
        
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strictNullChecks": true,
            
        "baseUrl": "./",
        "paths": {
            "@config": ["src/config"],
            "@icons": ["assets/icons"]
        },
    },
    "include": ["src/**/*.ts", "test/**/*.ts"]
    
    
} 
