{
    
	"compilerOptions": {
        
        
        "target": "es2020", // Or your desired target
        // "module": "commonjs", // Or "esnext" for ES modules
        // "outDir": "./dist",
        
    
    
		"module": "Node16",
		
        "strict": true,
        
        "lib": ["ES2020"],
        "skipLibCheck": true,
        
        "importHelpers": true,

		"outDir": "out/src",
        "rootDir": "src",
        
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strictNullChecks": true,
            
        "baseUrl": "./",
        "paths": {
            "@config": ["src/config"],
            "@icons": ["assets/icons"]
        },
    },
    
    "include": ["src/**/*.ts", "../test/**/*.ts"]
    
    
} 




