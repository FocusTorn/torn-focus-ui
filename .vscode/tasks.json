// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
			
		},
		{
            "label": "Generate Icons Metadata",
            "type": "shell",
            "command": "node",
            "args": [
                "${workspaceFolder}/src/scripts/generateIconsMetadata.js"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        
		{
            "label": "Combine Json Files",
            "type": "shell",
            "command": "node",
            "args": [
                "${workspaceFolder}/src/scripts/combine_json_files.js"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
		
		{
            "label": "Build and Watch",
            "dependsOn": [
                "Generate Icons Metadata",
                "Combine Json Files",
                "npm: watch"
            ],
            "group": "build",
            "dependsOrder": "sequence"
        }
		
	]
}
