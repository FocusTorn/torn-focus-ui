{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}"],
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/out/src/**/*.js"],
			"preLaunchTask": "npm: watch"
		},
		{
            "name": "Build and Watch",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
				// "${workspaceFolder}/src/test/workspace/workspace.code-workspace",
				
				"D:/!Dev/VSC_Extensions/.vscode/VSC_Extensions.code-workspace",
				"--extensionDevelopmentPath=${workspaceFolder}"
			
			],
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/out/src/**/*.js"],
            "preLaunchTask": "Build and Watch"
        }



]
}


